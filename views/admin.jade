!!!
html(ng-app="debateclock")
  head
    meta(charset='utf8')
    base(href='/')
    title Debate Clock Admin
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css', integrity='sha384-1q8mTJOASx8j1Au+a5WDVnPi2lkFfwwEAa8hDDdjZlpLegxhjVME1fgjWPGmkzs7', crossorigin='anonymous')
    link(rel='styleshee', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap-theme.min.css', integrity='sha384-fLW2N01lMqjakBkx3l/M9EahuwpSfeNvV63J5ezn3uZzapT0u7EYsXMjQV+0En5r', crossorigin='anonymous')
    link(rel='stylesheet', href='/css/app.css')

    script(src='//code.jquery.com/jquery-1.12.0.min.js')
    script(src='//code.jquery.com/jquery-migrate-1.2.1.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js', integrity='sha384-0mSbJDEHialfmuBBQP6A4Qrprq5OVfW37PRR3j5ELqxss1yVqOtnepnHVP9aJ7xS', crossorigin='anonymous')
  body
    div(ng-controller='AdminCtrl')
      nav.navbar.navbar-default
        .navbar-header
          button(type="button", data-toggle="collapse", data-target="#menu", aria-expanded="false").navbar-toggle.collapsed
          a.navbar-brand(href="#") Debate Clock Admin
        .collapse.navbar-collapse(id="menu")
          ul.nav.navbar-nav.navbar-right
            li
              a(href="#", data-toggle="modal", data-target=".addSpeakerModal") Add Speaker

      .container
        .row
          .col-md-12
            button.btn-warning()
              i.glyphicon.glyphicon-pause Pause Timer
      
      div(ng-view)


    .modal.addSpeakerModal(tabindex="-1", role="dialog")
      .modal-dialog
        .modal-content
          .modal-header
            button.close(type="button", data-dismiss="modal", aria-label="Close")
              span(aria-hidden="time") &times;
          .modal-body
            .form-horizontal
              .form-group
                label.col-sm-3.control-label(for="txtSpeakerName") Name
                .col-sm-9
                  input.form-control(type="text", id="txtSpeakerName", placeholder="Full Name")
              .form-group
                label.col-sm-3.control-label(for="txtImagePath") Image path
                .col-sm-9
                  input.form-control(type="text", id="txtImagePath", placeholder="http://")
          .modal-footer
            button.btn.btn-default(type="button", data-dismiss="modal") Cancel
            button.btn.btn-primary(type="button") Save

    script(src='/socket.io/socket.io.js')
    script(src='bower_components/angular/angular.js')
    script(src='bower_components/angular-route/angular-route.js')
    script(src='bower_components/angular-socket-io/socket.js')
    script(src='js/app.js')
    script(src='js/services.js')
    script(src='js/controllers.js')
    script(src='js/filters.js')
    script(src='js/directives.js')
